{
    "manifest_version": 3,
    "name": "保育記録自動化 (PDF & Sheets)",
    "version": "1.0",
    "description": "NotionページをPDF化してGoogleドライブに保存し、スプレッドシートに記録する拡張機能",
    "permissions": [
        "activeTab",
        "scripting",
        "identity"
    ],
    "host_permissions": [
        "https://www.notion.so/*",
        "https://www.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "保育記録を保存"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.notion.so/*"
            ],
            "js": [
                "lib/html2canvas.min.js",
                "lib/jspdf.umd.min.js",
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}